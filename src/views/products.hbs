<main>
  <h1>Bienvenido {{req.user.email}}!</h1>
  <p> Rol: {{req.user.role}}</p>
  <div>
    <form action="/logout" method="post">
      <button type="submit">Cerrar Sesión</button>
    </form>
  </div>
  <div>
    <h3>INGRESO DE PRODUCTOS</h3>
    <div>
      {{#each product}}
      <div>
        <img src={{this.thumbnail}} />
        <p>{{this.title}}</p>
        <p>Precio: $ {{this.price}}</p>
        <p>Código: {{this.code}}</p>
        <button onclick="deletePrd('{{this.code}}')">Eliminar</button>
      </div>
      {{/each}}
    </div>
  </div>

  <form>
    <div>
      <div>
        <label for="image">Imagen</label>
        <input type="text" name="image" id="image" />
      </div>
      <div>
        <label for="title">Producto</label>
        <input type="text" name="title" id="title" />
      </div>
      <div>
        <label for="cat">Categoria</label>
        <input type="text" name="cat" id="cat" />
      </div>
      <div>
        <label for="price">Precio</label>
        <input type="number" name="price" id="price" />
      </div>
      <div>
        <label for="stock">Stock</label>
        <input type="number" name="stock" id="stock" />
      </div>
      <div>
        <label for="code">Código del Producto</label>
        <input type="text" name="code" id="code" />
      </div>
      <input class="Button" type="submit" value="Cargar" id="Button" />
    </div>
  </form>

</main>

<script src="./js/products.js"></script>